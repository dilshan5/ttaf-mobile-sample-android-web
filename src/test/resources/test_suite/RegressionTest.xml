<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="TTAF - RegressionTest">
    <listeners>
        <!--
        This TestNG listener takes care of setting up and tearing down the Appium driver.
    -->
        <listener class-name="com.automation.qa.ttafmobilecore.listener.WebDriverListener"/>
    </listeners>

    <test name="Emulator-1">
        <!-- If you want to be more specific, replace this with a list of test classes you'd like to run -->
        <parameter name="appium-server-port" value="4723"/>
        <parameter name="mobile-device-id" value="emulator-5554"/>
        <parameter name="mobile-version" value="5.1.1"/>
        <parameter name="browserName" value="chrome"/>
        <parameter name="mobile-device-name" value="Nexus_4_API_22"/>
        <classes>
            <class name="runner.SmokeTest"/>
        </classes>
    </test>
</suite>