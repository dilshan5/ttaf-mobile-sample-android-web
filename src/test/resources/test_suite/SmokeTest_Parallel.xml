<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="TTAF - SmokeTest - Multiple Device Testing in Parallel" parallel="tests" verbose="1"
       configfailurepolicy="continue"
       thread-count="2">
    <listeners>
        <!--
        This TestNG listener takes care of setting up and tearing down the Appium driver.
    -->
        <listener class-name="com.automation.qa.ttafmobilecore.listener.WebDriverListener"/>
    </listeners>

    <test name="Emulator-1">
        <!-- If you want to be more specific, replace this with a list of test classes you'd like to run -->
        <parameter name="appium-server-port" value="1234"/>
        <parameter name="mobile-device-id" value="emulator-5554"/>
        <parameter name="mobile-version" value="5.1.1"/>
        <parameter name="browserName" value="Chrome"/>
        <parameter name="mobile-device-name" value="Samsung_GII"/>
        <classes>
            <class name="runner.SmokeTest"/>
        </classes>
    </test>


    <test name="Emulator-2">
        <parameter name="port" value="3456"/>
        <parameter name="deviceID" value="emulator-5556"/>
        <parameter name="OSverison" value="6.0"/>
        <parameter name="browser" value="Chrome"/>
        <parameter name="deviceName" value="Nexus_4"/>
        <classes>
            <class name="runner.SmokeTest"/>
        </classes>
    </test>

</suite>
