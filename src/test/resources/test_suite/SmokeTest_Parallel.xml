<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="TTAF - SmokeTest - Multiple Android Device Testing in Parallel" parallel="methods" verbose="10"
       configfailurepolicy="continue"
       thread-count="5">
    <listeners>
        <!--
        This TestNG listener takes care of setting up and tearing down the Appium driver.
    -->
        <listener class-name="com.automation.qa.ttafmobilecore.listener.WebDriverListener"/>
    </listeners>

    <test name="Emulator-1">
        <parameter name="appium-server-port" value="1234"/>
        <parameter name="mobile-device-id" value="emulator-5554"/>
        <parameter name="mobile-version" value="5.1.1"/>
        <parameter name="browserName" value="Chrome"/>
        <parameter name="mobile-device-name" value="Nexus_4_API_21"/>
        <parameter name="UiAutomator2-systemPort" value="8002"/>
        <classes>
            <class name="runner.SmokeTest"/>
        </classes>
    </test>

    <test name="Pie ">
        <parameter name="appium-server-port" value="3456"/>
        <parameter name="mobile-device-id" value="emulator-5556"/>
        <parameter name="mobile-version" value="9"/>
        <parameter name="browserName" value="chrome"/>
        <parameter name="mobile-device-name" value="Pixel_2_API_28"/>
        <parameter name="UiAutomator2-systemPort" value="8001"/>
        <classes>
            <class name="runner.SmokeTest"/>
        </classes>
    </test>


    <test name="Nexus 6">
        <parameter name="appium-server-port" value="1345"/>
        <parameter name="mobile-device-id" value="ZX1G22TPD3"/>
        <parameter name="mobile-version" value="7.1.1"/>
        <parameter name="browserName" value="chrome"/>
        <parameter name="mobile-device-name" value="Nexus 6"/>
        <parameter name="UiAutomator2-systemPort" value="8003"/>
        <classes>
            <class name="runner.SmokeTest"/>
        </classes>
    </test>

</suite>
